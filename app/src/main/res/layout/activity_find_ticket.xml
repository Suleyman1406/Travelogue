<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FindTicketActivity"
    android:orientation="vertical"
    android:id="@+id/find_ticket_layout"
    android:background="@color/primaryLightColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primaryColor">

        <ImageButton
            android:id="@+id/find_ticket_back_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:onClick="goBack"
            android:background="#00000000"
            android:tint="@color/white"
            android:src="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:id="@+id/settings_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-6dp"
            android:fontFamily="@font/anton"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Find Your Ticket"
            android:textSize="25sp" />
    </LinearLayout>
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/chip_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cnb_menuResource="@menu/menu_chip_navigation"
        android:background="@drawable/chip_nav_box"
        app:cnb_unselectedColor="@color/black"
        app:cnb_radius="8dp"
        app:cnb_iconSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:cnb_orientationMode="horizontal"
        android:elevation="8dp"
        />

</LinearLayout>