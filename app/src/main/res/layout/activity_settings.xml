<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity"
    android:orientation="vertical"
    android:background="@color/primaryLightColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primaryColor">
        <ImageButton
            android:layout_marginLeft="5dp"
            android:onClick="toBackActivity"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:background="#00000000"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/settings_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/anton"
            android:gravity="center"
            android:text="Settings"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="10dp"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="100dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/settings_language_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:layout_centerVertical="true"
                android:text="Language"
                android:textColor="@color/black"
                android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/choose_language_button"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="changeLanguage"
                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:background="#00000000"/>

            <TextView
                android:id="@+id/current_language_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/choose_language_button"
                android:fontFamily="@font/aldrich"
                android:text="ENGLISH" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginBottom="25dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/settings_country_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:layout_centerVertical="true"
                android:text="Country"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/choose_country_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="changeCountry"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/current_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USA"
                android:layout_toLeftOf="@+id/choose_country_button"
                android:layout_centerVertical="true"
                android:fontFamily="@font/aldrich"
                />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginBottom="25dp"
            />

       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/settings_currency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:layout_centerVertical="true"
                android:text="Currency"
                android:textColor="@color/black"
                android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/choose_currency_button"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="changeCurrency"

                    android:src="@drawable/ic_baseline_play_arrow_24"
                    android:background="#00000000"/>
                <TextView
                    android:id="@+id/current_currency_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOLLAR"
                    android:layout_toLeftOf="@+id/choose_currency_button"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/aldrich"
                    />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginBottom="25dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/settings_terms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:onClick="to_terms_conditions"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:background="#00000000"/>



        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginBottom="25dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/settings_privacy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:onClick="to_privacy_policy"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:background="#00000000"/>



        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginBottom="25dp"
            />
    </LinearLayout>
</LinearLayout>