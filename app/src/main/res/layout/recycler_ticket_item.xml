<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/ticket_corner_res"
    android:elevation="40dp"
    android:clipToPadding="false"
    android:padding="10dp"
    android:id="@+id/ticket_item_layout"
    android:transitionName="ticketItemLayout"
    >
    <RelativeLayout
        android:id="@+id/ticket_logo_layout"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="ticketLogoLayout"
        >
        <ImageView
            android:id="@+id/ticket_logo"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"/>
        <ProgressBar
            android:id="@+id/ticket_progress"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminateTint="@color/black"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/nothing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="black"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticket_logo_layout"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:transitionName="ticketPrice"
        android:text="Price: 150$"/>

    <ImageView
        android:id="@+id/ticket_road_image"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:transitionName="roadImage"
        android:src="@drawable/way" />
    <TextView
        android:id="@+id/ticket_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="165dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:transitionName="startTime"
        android:text="15:30"/>
    <TextView
        android:id="@+id/ticket_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:transitionName="endTime"
        android:text="16:30"/>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="65dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/ticket_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:transitionName="totalTime"
            android:text="3s"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ticket_heart_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="#00000000"
        android:scaleType="fitStart"

        android:src="@drawable/heart" />
</RelativeLayout>