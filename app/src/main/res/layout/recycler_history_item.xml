<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/history_ticket_back_res">
        <RelativeLayout
            android:id="@+id/history_item_logo_layout"
            android:layout_width="85dp"
            android:layout_height="65dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:id="@+id/history_item_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_centerInParent="true"
                android:src="@drawable/logo" />
            <ProgressBar
                android:id="@+id/history_item_progress"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:indeterminateTint="@color/black"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/history_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history_item_logo_layout"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/anton"
            android:text="Date: 10.12.2021"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/history_item_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history_item_date"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/anton"
            android:text="Seat: 30A"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="75dp"
            >

            <ImageView
                android:id="@+id/history_item_road_image"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/way" />

            <TextView
                android:id="@+id/history_item_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="3h" />
            <TextView
                android:id="@+id/history_item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Baku"
                android:fontFamily="@font/anton"
                />
            <TextView
                android:id="@+id/history_item_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Antalya"
                android:fontFamily="@font/anton"
                />


        </RelativeLayout>
        <TextView
            android:id="@+id/history_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/history_item_date"
            android:fontFamily="@font/anton"
            android:text="Price: 80$"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/history_item_vehicle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_directions_boat_filled_24"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</LinearLayout>