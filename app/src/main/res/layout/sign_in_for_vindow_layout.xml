<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfilePageFragment"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/profile_page_background">

        <TextView
            android:id="@+id/please_login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lock_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Please login \n to view this window"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <ImageView
            android:id="@+id/lock_image_view"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_lock_50" />
        <Button

            android:id="@+id/please_login_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIgn In"
            android:textColor="@color/white"
            android:layout_below="@+id/lock_image_view"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_menu_button"
            android:textStyle="bold"
            android:textSize="25sp"/>

    </RelativeLayout>




</FrameLayout>